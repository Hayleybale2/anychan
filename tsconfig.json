{
  "compilerOptions": {
		"sourceMap": true,
    "noImplicitAny": true,
    "module": "NodeNext",
    "lib": ["es2020", "dom"],
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@/types": ["./src/types/index.js"],
      "@/hooks": ["./src/hooks/index.js"],
      "@/api/errors": ["./src/api/errors/index.js"],
      "@/*": ["./src/*"]
    },
    "types": [
      "@types/gtag.js",
      "webpack/module"
    ]
  },
  "include": [
    "./src",
    "./dataSources",
    "../frontend-lib",
    "../social-components-react"
  ]
}